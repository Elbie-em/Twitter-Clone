<div class="column is-half">
<% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name)%>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form'%>
    </div>
  </article>
<% end %>
<% @tweets.each do |t|%>    
  <div class= "box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
           <%= gravatar_image_tag(t.user.email, size: 64, alt: t.user.name)%>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= t.user.name%></strong><br />
          <small>@<%=t.user.username%></small><br />
          <p><%= t.tweet%></p>
        </div>
        <nav class="level">
        <%if user_signed_in? %>
          <div class="level-left is-mobile">
            <%= link_to t, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_tweet_path(t), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to t, method: :delete, data:{ confirm: "Are you are you want to delete this tweet?" } do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          <div>
        <% end %>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>